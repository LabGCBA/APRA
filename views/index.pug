    script.
      $("#result").html("<div id='juntador'><div class='loader'></div></div>");
      $.get("http://"+window.location.host+"/estacion", function(data){
              $("#result").html(data);
              $('#side').height($(document).height()-1);
      });
      function getData(str){
            $("#result").html("<div></div>");
            $.get("http://"+window.location.host+"/"+str, function(data){
              $("#result").html(data);
              $('#side').height($(document).height());
            });
            window.scrollTo(0, 0);
            $("#result").html("<div id='juntador'><div class='loader'></div></div>");
            return false;
      }     
