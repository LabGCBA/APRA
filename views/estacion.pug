                    input(type='checkbox', value='')
                    | Centenario
                .checkbox.disabled
                  label(style='width: 49%;')
                    input(type='checkbox', value='')
                    | La Boca

          .col-md-2(style='margin-top: 75px;')
              form
                 .checkbox.disabled
                  label
                    input(type='checkbox', value='', ons)
                    | PM10
                 .checkbox.disabled
                  label
                    input(type='checkbox', value='')
                    | PM25
                 .checkbox.disabled
                  label
                    input(type='checkbox', value='')
                    | CO
