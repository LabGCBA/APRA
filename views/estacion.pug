    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', rel='stylesheet')
    link(href='main.css', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Lato|Open+Sans')
  body
    .container(style='margin-top: -50px;')
      .row
        .form-group(style='margin-top:100px; margin-left:-75px;')
          h1 Estaciones
          #contacts
            table.table.table-bordered
              thead
                tr
                  th.sort(data-sort='name') Nombre
              tbody
                for estacion in data.estaciones
                  tr
                    td
                      a(href="#", onclick='getData("sensores/'+estacion.Id+'");')= dictionary[estacion.Id]
          .col-sm-10
            h2.moverh2 Descargar Estacion
          .col-md-2(style='margin-top: 75px;')
              form
                .checkbox.disabled
                  label
                    input(type='checkbox', value='')
