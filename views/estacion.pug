                  label
                    input(type='checkbox', value='')
                    | 03
                 .checkbox.disabled
                  label
                    input(type='checkbox', value='')
                    | NO2
                 .checkbox.disabled
                  label
                    input(type='checkbox', value='')
                    | NOX
                 .checkbox.disabled
                   label
                     input(type='checkbox', value='')
                     | SO2
                 .checkbox.disabled
                  label
                    input(type='checkbox', value='')
                    | H2S

          .col-md-2(style='margin-top: 22px;')
            tr
              th(style='text-align:center;')
                center(style='font-weight: 600;')
                  | Horarios/Minutales:
            tr
              td
                select(onchange='', name='estaciones', style='padding-right: 50px; margin-top:27px;')
                  option(value='0', selected='selected')
                  option(value='1') Horarios
                  option(value='2') Minutales

          .col-md-3(style='margin-top: 40px;')
            form(onsubmit='return getData("mediciones/'+data.sensor_id+'/'+data.estacion_id+'/?date="+this.elements["date"].value);')
              #fecha
                label(for='FromDate') Ingresa Fecha:
                #otro
                  input(type='date', name='date')#FromDate
