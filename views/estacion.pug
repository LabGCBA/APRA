-var dictionary = data.dictionary
doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
    title
    script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', rel='stylesheet')
    link(href='main.css', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Lato|Open+Sans')
  body
    .container(style='margin-top: -50px;')
      .row
        .form-group(style='margin-top:100px; margin-left:-75px;')
          h1 Estaciones
          #contacts
            table.table.table-bordered
              thead
                tr
                  th.sort(data-sort='name') Nombre
              tbody
                for estacion in data.estaciones
                  tr
                    td
                      a(href="#", onclick='getData("sensores/'+estacion.Id+'");')= dictionary[estacion.Id]
    h2 Descargar Estacion
    .col-md-12
            #selector
                form(onsubmit='')
                  #fecha
                    label(for='FromDate') Desde Fecha:
                    #otro
                      input(type='date', name='date')#FromDate
                  #fecha
                    label(for='ToDate') Hasta Fecha:
                    #otro
                      input(type='date', name='date')#FromDate
                  select
                      option Cordoba
                      option Centenario
                      option La Boca
                  #contaminantes
                        input(type='checkbox', value='')
                        | PM10
                        input(type='checkbox', value='')
                        | PM25
                        input(type='checkbox', value='')
                        | CO
                        input(type='checkbox', value='')
                        | 03
                        input(type='checkbox', value='')
                        | NO2
                        input(type='checkbox', value='')
                        | NOX
                        input(type='checkbox', value='')
                        | SO2
                        input(type='checkbox', value='')
                        | NO
                        input(type='checkbox', value='')
                        | H2S
                  select(onchange='', name='estaciones')
                      option(value='1', selected) Horarios
                      option(value='2') Minutales
                  button.btn.btn-outline-success(type='button') Descargar