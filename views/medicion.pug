  doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
    title
    link(rel='stylesheet', href='css/main.css')
    link(rel='stylesheet', href='js/archivos.js')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Lato|Open+Sans')
    link(rel='stylesheet', href='/main.css')
  body
    .container
      h1= data.estacion_id.toUpperCase()
      h2= data.sensor_id
      .row
        button.btn.btn-info(type='button', style='margin-left: -85px;', onclick='getData("sensores/'+data.estacion_id+'");') Atras
        .form-group(style='margin-top:100px; margin-left:-90px;')
          label.col-sm-2.control-label(for='inputPassword', style='padding-top: 7px; padding-left: 115px; top: -20px;') Sensor
          .col-sm-10(style='top: -20px;')
            select(onchange='getData("mediciones/"+this.options[this.selectedIndex].value+"/'+data.estacion_id+'");', style='margin-bottom:0px;').form-control
              for sensor in data.sensores
                if data.sensor_id == sensor.Id
                  option(value=sensor.Id, selected)= sensor.Id
                else
                  option(value=sensor.Id)= sensor.Id
        .col-sm-3(style='float: right; left: -275px; margin-top: 20px; width: 50%;')
          .well.well-sm
            form(action='DateTest.html')
              label(for='FromDate') Ingresa Fecha:
              input#FromDate.date(type='date', name='FromDate', value='11/08/2012')
              hr
              input#btnSubmit.btn.btn-success(type='submit', name='btnSubmit', value='Buscar', style='margin-top: -8px; margin-left: 175px;')
        table.table.table-bordered.table-inverse(style='margin-top:30px;')
          thead
            tr
              th Timestamp
              th Valor
              th Link
          tbody
            for medicion in data.mediciones
              tr
                td= medicion.Day
                td= medicion.State
                td= medicion.DayStatisticLink0

        .col-sm-10(style='margin-top: 35px; margin-bottom: 28px; margin-left: 60px;')
            h2 Añadir Medicion     

        form(action='url', method='', style='margin-top:-59px;')
          .form-group
            label(for='', style='margin-top:210px;') Timestamp
            input.form-control(type='', id='', placeholder='')
          .form-group
            label(for='') Valor
            input.form-control(type='', id='', placeholder='')
          .form-group
            label(for='') Unidad
            input.form-control(type='', id='', placeholder='')
          .form-group
            label(for='') Descripcion
            input.form-control(type='', id='', placeholder='')
          .form-group
            label(for='') Sensor_ID
            input.form-control(type='', id='', placeholder='')
        .center-block(style=' text-align: center;')
            button.btn.btn-info(type='submit') Añadir Medición
        