doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
    title
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js")
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Lato|Open+Sans')
    script.
      $(document).ready( function() {
            var now = new Date();
            var month = (now.getMonth() + 1);               
            var day = now.getDate();
            if(month < 10) 
                month = "0" + month;
            if(day < 10) 
                day = "0" + day;
            var today = now.getFullYear() + "-" + month + "-" + day; 
            $('#FromDate').attr("value", today);
        });

  body
    .container
      h1= data.estacion_id.toUpperCase()
      h2= data.sensor_id
      .row
        button.btn.btn-info(type='button', onclick='getData("sensores/'+data.estacion_id+'");')#atras Atras
        .form-group(style='margin-top:100px; margin-left:-90px;')
          label.col-sm-2.control-label(for='inputPassword', style='padding-top: 7px; padding-left: 115px; top: -20px;') Sensor
          .col-sm-10(style='top: -20px;')
            select(onchange='getData("mediciones/"+this.options[this.selectedIndex].value+"/'+data.estacion_id+'");', style='margin-bottom:0px;').form-control
              for sensor in data.sensores
                if data.sensor_id == sensor.Id
                  option(value=sensor.Id, selected)= sensor.Id
                else
                  option(value=sensor.Id)= sensor.Id
        #selector
            form(onsubmit='return getData("mediciones/'+data.sensor_id+'/'+data.estacion_id+'/?date="+this.elements["date"].value);')
              #fecha
                label(for='FromDate') Ingresa Fecha:
                input(type='date', name='date')#FromDate
              hr
              input#btnSubmit.btn.btn-success(type='submit',value='Buscar')
        table.table.table-bordered.table-inverse(style='margin-top:30px;')
          thead
            tr
              th Timestamp
              th Valor
              th Link
          tbody
            for medicion in data.mediciones
              tr
                td= medicion.Day
                td= medicion.State
                td= medicion.DayStatisticLink0

        .col-sm-10(style='margin-top: 35px; margin-bottom: 28px; margin-left: 60px;')
            h2 Añadir Medicion     

        form(action='url', method='', style='margin-top:-59px;')
          .form-group
            label(for='', style='margin-top:210px;') Timestamp
            input.form-control(type='', id='', placeholder='')
          .form-group
            label(for='') Valor
            input.form-control(type='', id='', placeholder='')
          .form-group
            label(for='') Unidad
            input.form-control(type='', id='', placeholder='')
          .form-group
            label(for='') Estacion_ID
            select.form-control(type='', id='', placeholder='')
                if(data.estacion_id=='la_boca')
                  option(value='la_boca', selected) La Boca
                else
                  option(value='la_boca') La Boca
                if (data.estacion_id=='centenario')
                  option(value='centenario', selected) Centenario
                else
                  option(value='centenario') Centenario
                if(data.estacion_id=='cordoba')
                  option(value='cordoba', selected) Cordoba
                else
                  option(value='cordoba') Cordoba
          .form-group
            label(for='') Sensor_ID
            select.form-control(type='', id='', placeholder='')
              for sensor in data.sensores
                if data.sensor_id == sensor.Id
                  option(value=sensor.Id, selected)= sensor.Id
                else
                  option(value=sensor.Id)= sensor.Id
        .center-block(style=' text-align: center;')
            button.btn.btn-info(type='submit') Añadir Medición
        