doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
    title
    script(src='//cdnjs.cloudflare.com/ajax/libs/list.js/1.2.0/list.min.js')
  body
    .container
      h2= data.estacion_id.toUpperCase()
      .row
        button.btn.btn-info(type='button', onclick='getData("estacion");')#atras Atras
        .form-group(style='margin-top:100px; margin-left:-90px;')
          label.col-sm-2.control-label(for='inputPassword', style='padding-top: 7px; padding-left: 115px; top: -20px;') Estación
          .col-sm-10(style='top: -20px;')
            select(onchange='getData("sensores/"+this.options[this.selectedIndex].value);').form-control
              if(data.estacion_id=='la_boca')
                option(value='la_boca', selected) La Boca
              else
                option(value='la_boca') La Boca
              if (data.estacion_id=='centenario')
                option(value='centenario', selected) Centenario
              else
                option(value='centenario') Centenario
              if(data.estacion_id=='cordoba')
                option(value='cordoba', selected) Cordoba
              else
                option(value='cordoba') Cordoba
          #contacts
            table.table.table-bordered
              thead
                tr
                  th.sort(data-sort='name') Nombre
                  th Editar
                  th Borrar
              tbody
                for sensor in data.sensores
                  tr
                    td
                      a(href="#", onclick='getData("mediciones/'+sensor.Id+'/'+data.estacion_id+'");')= sensor.Id
                    td.edit
                      button.edit-item-btn.btn.btn-primary(onclick='getData()') Editar

                    td.remove
                      button.remove-item-btn.btn.btn-danger Borrar
          .col-sm-10(style='margin-top: 70px; margin-bottom: 28px; margin-left: 115px;')
            h2(style='text-align:center;') Añadir Sensor
          form(action='url', method='POST')
            .form-group(style='')
              label(for='', style='margin-right:20px;') Sensor_Id
              input.form-control(type='', id='', placeholder='')
            .form-group
              label(for='') Ubicacion
              input.form-control(type='', id='', placeholder='')
            .form-group
              label(for='') Modelo
              input.form-control(type='', id='', placeholder='')
            .form-group
              label(for='') Inicio Actividad
              input.form-control(type='', id='', placeholder='')
            .form-group
              label(for='') Marca
              input.form-control(type='', id='', placeholder='')
            .form-group
              label(for='') Estado
              input.form-control(type='', id='', placeholder='')
          .center-block(style=' text-align: center;')
            button.btn.btn-info(type='submit') Añadir Sensor
